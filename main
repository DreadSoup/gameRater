const gameLibrary = ['Witcher 3', 'Final Fantasy 7', 'Death Stranding', 'Disco Elysium'];

const starRating = [5, 4, 5, 3, 3, 4];

const avgRating = function (starRating) {
    let sum = 0;
    for (let i = 0; i < starRating.length; i++) {
        sum += starRating[i];
    }
    return sum / starRating.length;
}


document.querySelector('.rate').addEventListener('click',
function() {

    const rating = Number (document.querySelector('.rating').value);

    if (rating < 1 || rating > 5) {
        // message output
    }

    starRating.push(Number (document.querySelector('.rating').value));
    document.querySelector('.rating').value = '';
    document.querySelector('.avg-rating').textContent = Math.trunc(avgRating(starRating));
    console.log(avgRating(starRating));
    
})
